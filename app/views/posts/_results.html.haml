%table
  %tr
    %th Content
    %th Title
    %th Kind
    %th Published at
    %th
    %th
    %th
  - posts.each do |post|
    %tr
      %td= rand(100)
      %td= post.content
      %td= post.title
      %td= post.kind
      %td= post.published_at
      %td= link_to 'Show', post # post_path(post)
      %td= link_to 'Edit', edit_post_path(post)
      %td= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }
